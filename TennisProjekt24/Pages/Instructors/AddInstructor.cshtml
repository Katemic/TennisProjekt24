@page
@model TennisProjekt24.Pages.Instructors.AddInstructorModel
@{
    ViewData["Title"] = "Add Instructor";
}

<div class="card">

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.Instructor.Name" class="control-label">Navn</label>
            <input asp-for="@Model.Instructor.Name" class="form-control" />
            <span asp-validation-for="Instructor.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Instructor.PhoneNumber" class="control-label">Telefonnummer</label>
            <input asp-for="@Model.Instructor.PhoneNumber" class="form-control" />
            <span asp-validation-for="Instructor.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Instructor.Description" class="control-label">Beskrivelse</label>
            <input asp-for="@Model.Instructor.Description" class="form-control" />
            <span asp-validation-for="Instructor.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Photo" class="control-label">Tilføj billede</label>
            <div class="custom-file">
                <input asp-for="@Model.Photo" class="custom-file-input form-control" />
                <label class="custom-file-label"></label>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
        </div>
        <div>
            <input type="submit" value="Opret træner" class="btn btn-primary" />
            <a asp-page="Index" class="btn btn-secondary">Tilbage</a>
            
        </div>
    </form>

 

</div>