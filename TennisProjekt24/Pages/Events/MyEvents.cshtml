@page
@model TennisProjekt24.Pages.Events.MyEventsModel
@{
    ViewData["Title"] = "MyEvents";
}

<head>
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>

<h1>Event tilmeldinger</h1>

<div class="card">

    <table class="table">
        <thead>
            <tr>
                <th>
                    Event
                </th>
                <th>
                    Dato
                </th>
                <th>
                    Lokation
                </th>
                <th>
                    Beskrivelse
                </th>
                <th>
                    Antal
                </th>
                <th>
                    Note
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Participants.Count() != 0)
            {
                @foreach (var item in Model.ParticipantsFuture)
                {
                    <tr>
                        <td>
                            @item.Event.Title
                        </td>
                        <td>
                            @item.Event.Date.Value.ToString("dddd, dd MMMM yyyy HH:mm")
                        </td>
                        <td>
                            @item.Event.Place
                        </td>
                        <td>
                            <pre>@item.Event.Description</pre>
                        </td>
                        <td>
                            @item.NoOfParticipants
                        </td>
                        <td>
                            @item.Note
                        </td>
                        <td>
                            <a asp-page="/Events/UpdateParticipant" asp-route-eventId="@item.Event.EventId" class="btn btn-primary" asp-route-memberId="@item.Member.MemberId">Rediger</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>

<br />
<a asp-page="/Members/Profile" class="btn btn-secondary">Tilbage</a>