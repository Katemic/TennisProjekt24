@page
@model TennisProjekt24.Pages.Events.BookEventModel
@{
    ViewData["Title"] = "Book Event";
}

<h1>Tildmeld event</h1>

<form method="post">

        <table class="table">
            <tr>
                <th>Event Id</th>
                <td>@Model.EventBook.EventId</td>
            </tr>
            <tr>
                <th>Dato</th>
                <td>@Model.EventBook.Date</td>
            </tr>
            <tr>
                <th>Titel</th>
                <td>@Model.EventBook.Title</td>
            </tr>
            <tr>
                <th>Beskrivelse</th>
                <td>@Model.EventBook.Description</td>
            </tr>
            <tr>
                <th>Medlem Id</th>
                <td>@Model.EventBook.MemberId</td>
            </tr>
        </table>
        <div class="form-group">
            <label asp-for="@Model.Attendee.NoOfParticipants">Antal deltagere (inklusiv dig selv):</label>
        <input asp-for="@Model.Attendee.NoOfParticipants" type="number" class="form-control" />
        <span asp-validation-for="Attendee.NoOfParticipants" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Attendee.Note">Kommentar:</label>
            <input asp-for="@Model.Attendee.Note" type="text" class="form-control" />
        </div>
        <div class="form-group">
        <label for="memberId">Vælg medlem:</label>
        <select name="memberId" id="memberId">
        <option value="">-- Vælg medlem --</option>
        @foreach (var member in Model.members)
        {
        <option value="@member.MemberId">@member.Name</option>
        }
        </select>
        </div>
  
        <input type="submit" value="Tildmeld" asp-route-eventId="@Model.EventBook.EventId" class="btn btn-success" />
        <a asp-page="Index" class="btn btn-secondary">Tilbage</a>

</form>