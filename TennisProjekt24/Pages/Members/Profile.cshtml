    <div class="dropdown">
        <button onclick="myFunction()" class="dropbtn" >Indstillinger</button>
        <div id="myDropdown" class="dropdown-content">
            <a asp-page="/Members/DeleteMember" asp-route-id="@Model.CurrentMember.MemberId" >Slet</a>
            <a asp-page="/Members/UpdateMember" asp-route-id="@Model.CurrentMember.MemberId" >Opdater</a>
