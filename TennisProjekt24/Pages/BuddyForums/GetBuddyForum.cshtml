@page
@model TennisProjekt24.Pages.BuddyForums.GetBuddyForumModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .heading {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            width: 100%;
            font-size: 34px;
            padding: 0 14px;
        }
        .post {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            /* max-width: 300px; */
            margin: auto;
            /* text-align: center; */
            font-family: arial;
        }
        .textBlog {
            margin: 3%;
            text-align: center;
        }
/*         .date {
            text-align: left;
        }
        .title {
            text-align: center;
        }
        .skillType {
            text-align: right;
        } */
        .comment {

        }

    </style>
</head>

<body>
    <div class="post">
        <div class="heading">
            <p>@Model.GetBuddyForum.DateTime</p>
            <p>@Model.GetBuddyForum.Title</p>
            <p>@Model.GetBuddyForum.SkillType</p>
        </div>
        <div class="textBlog">
            <p>@Model.GetBuddyForum.Text</p>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Medlem
                </th>
                <th>
                    Dato
                </th>
                <th>
                    Text
                </th>
            </tr>
        </thead>
        <tbody>
            <div class="comment">
                @if (Model.ForumComments.Count() != 0)
                {
                    @foreach (var item in Model.ForumComments)
                    {
                    <tr>
                        <td>
                                @item.Commenter.Name
                        </td>
                        <td>
                                @item.DateTime
                        </td>
                        <td>
                                @item.Text
                        </td>
                            @if (item.Commenter.MemberId == (int)HttpContext.Session.GetInt32("MemberId"))
                            {
                            <td>
                                <p>
                                    <a asp-page="/ForumComments/DeleteComment" asp-route-commentId="@item.CommentId">Slet</a>
                                    <a asp-page="/ForumComments/UpdateComment" asp-route-commentId="@item.CommentId">Opdater</a>
                                </p>
                            </td>
                            }
                    </tr>
                    }
                }
            </div>
        </tbody>
    </table>
</body>



<form method="post">
    <body>
        <div class="form-group">
            <label asp-for="@Model.CreateComment.Text" class="control-label"></label>
            <input asp-for="@Model.CreateComment.Text" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Create a comment" class="btn btn-primary" />
        </div>
    </body>
</form>
</html>