@page
@model TennisProjekt24.Pages.ForumComments.UpdateCommentModel
@{
}

<h1>Rediger kommentar</h1>

<form method="post">

    <input type="hidden" asp-for="@Model.CommentToUpdate.CommentId" />

    <div class="form-group">
        <label asp-for="@Model.CommentToUpdate.Text" class="control-label">Kommentar</label>
        @* <input asp-for="@Model.CommentToUpdate.Text" class="form-control" /> *@
        <textarea asp-for="@Model.CommentToUpdate.Text" class="form-control" id="text" rows="2"></textarea>
        <span asp-validation-for="@Model.CommentToUpdate.Text" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Rediger" asp-page-handler="Update" asp-route-postId="@Model.CommentToUpdate.PostId" class="btn btn-primary" />
        <a asp-page="/BuddyForums/GetBuddyForum" asp-route-postId="@Model.CommentToUpdate.PostId" class="btn btn-secondary">Tilbage</a>
    </div>

 
</form>
