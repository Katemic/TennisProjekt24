@page
@model TennisProjekt24.Pages.ForumComments.UpdateCommentModel
@{
}

<h1>Opdater kommentar</h1>

<form method="post">

    <input type="hidden" asp-for="@Model.CommentToUpdate.CommentId" />

    <div class="form-group">
        <label asp-for="@Model.CommentToUpdate.Text" class="control-label"></label>
        <input asp-for="@Model.CommentToUpdate.Text" class="form-control" />
        <span asp-validation-for="@Model.CommentToUpdate.Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="opdater" asp-page-handler="Update" asp-route-postId="@Model.CommentToUpdate.PostId" class="btn btn-primary" />
    </div>

    <div>
        <a asp-page="/BuddyForums/GetBuddyForum" asp-route-postId="@Model.CommentToUpdate.PostId" class="btn btn-primary">Tilbage</a>
    </div>
</form>
