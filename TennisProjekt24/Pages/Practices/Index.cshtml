@page
@model TennisProjekt24.Pages.Practices.IndexModel
@{
    ViewData["Title"] = "Practice index";
}
<table class="table">
    <thead>
        <tr>
            <th>Practice Id</th>
            <th>Date</th>
            <th>Title</th>
            <th>Number of Practices</th>
            <th>Max Number of Atendees</th>
            <th>Instructor Id</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Practices.Count != 0)
        {
            @foreach(var item in Model.Practices)
            {
                <tr>
                    <td>
                        @item.PracticeId
                    </td>
                    <td>
                        @item.StartDate
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.NoOfTrainings
                    </td>
                    <td>
                        @item.MaxNoOfAtendees
                    </td>
                    <td>
                        @item.InstructorId
                    </td>
                    <td>
                        @item.Type
                </tr>
            }
        }
    </tbody>
</table>