@page
@model TennisProjekt24.Pages.Calender.IndexModel
@using Helpers;
@{
    ViewData["Title"] = "Calender";
}

<form method="get">
        <select asp-for="Months" onchange="this.form.submit()" asp-items="Html.GetEnumSelectList<Months>()">
        <option value="">vælg en måned</option>
    </select>
</form>

<table class="table">
    <thead>
        <tr>
            @foreach (var weekDay in System.Enum.GetValues(typeof(weekDays)))
            {
                <th>
                    @weekDay.ToString()
                </th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            @for (int i = 0; i < 42; i++)
            {
                DateTime date = Model.FirstDay.AddDays(i + 1);
                if (i % 7 == 0 && i > 0)
                {
                    @:</tr><tr>
                }
                if ((i == 0) && (Model.FirstDayOfMonth.DayOfWeek == DayOfWeek.Sunday))
                {
                    date = Model.FirstDay.AddDays(i);
                }
                <td>
                    @if (date.Month == Model.CurrentMonth) 
                    {
                        @date.Day
                    }

                    @foreach(var ev in Model.Events)
                    {
                        if(ev.Date.Day == date.Day && ev.Date.Month == date.Month && ev.Date.Month == Model.CurrentMonth)
                        {
                            <p>@ev.Title</p>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Events/Index"></a>
                        }
                    }
                </td>
            }
        </tr>
    </tbody>
</table>