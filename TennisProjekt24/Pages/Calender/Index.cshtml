<form method="get">
    <input type="submit" value="Næste måned" asp-route-currentMonth="@Model.CurrentMonth" onchange="this.form.submit()" class="btn btn-primary" />
</form>
<table class="table">
    <thead>
        <tr>
            @foreach (var weekDay in System.Enum.GetValues(typeof(weekDays)))
            {
                <th>
                    @weekDay.ToString()
                </th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            @for (int i = 0; i < 42; i++)
            {
                DateTime date = Model.FirstDay.AddDays(i + 1);
                if (i % 7 == 0 && i > 0)
                {
                    @:</tr><tr>
                }
                <td>
                    @if (date.Month == Model.CurrentMonth) 
                    {
                        @date.Day
                    }
                    @foreach(var ev in Model.Events)
                    {
                        if(ev.Date.Date == new DateTime(Model.CurrentYear, Model.CurrentMonth, date.Day))
                        {
                            <p>@ev.Title</p>
                        }
                    }
                </td>
            }
        </tr>
    </tbody>
</table>