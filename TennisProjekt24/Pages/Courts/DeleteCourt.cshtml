@page
@model TennisProjekt24.Pages.Courts.DeleteCourtModel
@{
    ViewData["Title"] = "Delete court";
}

<h1>Slet bane</h1>
<form method="post">
    <div class="form-group">
        <label>Udendørs</label> : @if (Model.DeleteCourt.Outdoor)
        {
            <div> Udendørs </div>
        }
        else
        {
            <div> Indendørs </div>
        }
        <label>Bane nummer</label> : @Model.DeleteCourt.CourtNumber <br />
        <label>Bane typen</label> : @Model.DeleteCourt.CourtType <br />
        <label>Tilgængelighed</label> : @if (Model.DeleteCourt.Availability)
        {
            <div> Tilgængelig </div>
        }
        else
        {
            <div> Utilgængelig </div>
        }

        <input type="submit" asp-page-handler="Delete" asp-route-courtId="@Model.DeleteCourt.CourtId" value="Delete court" />
    </div>
</form>